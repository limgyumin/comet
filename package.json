{
  "name": "comet",
  "version": "0.1.0",
  "main": "app",
  "homepage": "./",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.11.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "animate.css": "^4.1.1",
    "axios": "^0.20.0",
    "electron-is-dev": "^1.2.0",
    "mobx": "^5.15.6",
    "mobx-react": "^6.3.0",
    "node-schedule": "^1.3.2",
    "react": "^16.13.1",
    "react-countup": "^4.3.3",
    "react-dom": "^16.13.1",
    "react-fade-in": "^1.1.0",
    "react-loading": "^2.0.3",
    "react-notifications-component": "^2.4.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.3"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject",
    "start-interface": "cross-env BROWSER=none npm run start",
    "start-electron": "electron .",
    "start-electron-after-interface": "wait-on http://localhost:3000 && npm run start-electron",
    "dev": "concurrently -n interface,app 'npm:start-interface' 'npm:start-electron-after-interface'",
    "dist": "npm run build && electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "io.seia.<appName>",
    "copyright": "Copyright 2020 Seia-Soto. All rights reserved.",
    "npmRebuild": true,
    "files": [
      "app/**/*",
      "build/**/*",
      "node_modules/**/*"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "concurrently": "^5.3.0",
    "core-decorators": "^0.20.0",
    "cross-env": "^7.0.2",
    "customize-cra": "^1.0.0",
    "electron": "^10.1.1",
    "electron-builder": "^22.8.0",
    "react-app-rewired": "^2.1.6",
    "wait-on": "^5.2.0"
  }
}
